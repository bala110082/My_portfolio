{
  "name": "portfolio",
  "version": "1.0.0",
  "description": "Portfolio app built with Next.js and packaged as a desktop app using Electron",
  "private": true,
  "author": "",
  "main": "electron.js",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint",
    "electron-dev": "npx concurrently \"npm run start\" \"wait-on http://localhost:3000 && electron .\"",
    "package": "npx electron-builder"
  },
  "build": {
    "appId": "com.portfolio.app",
    "productName": "Portfolio App",
    "directories": {
      "output": "release"
    },
    "files": [
      "electron.js",
      ".next/**",
      "public/**",
      "out/**",
      "package.json",
      "!release/**",
      "!**/*.map"
    ],
    "asar": true,
    "win": {
      "target": "nsis",
      "icon": "public/icon.ico"
    }
  },
  "dependencies": {
    "next": "15.5.4",
    "nodemailer": "^7.0.10",
    "react": "19.1.0",
    "react-dom": "19.1.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "concurrently": "^9.2.1",
    "electron": "^39.1.2",
    "electron-builder": "^26.0.12",
    "eslint": "^9",
    "eslint-config-next": "15.5.4",
    "tailwindcss": "^4",
    "typescript": "^5",
    "wait-on": "^7.2.0"
  }
}
